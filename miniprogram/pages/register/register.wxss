/* miniprogram/pages/register/register.wxss */
.container{
  padding-top: 50rpx;
  background: #fff;
}
.public-title {
  font-size: 28rpx;
  color: #333;
  width: 140rpx;
  height: 40rpx;
  line-height: 40rpx;
  text-align: right;
}
.public-item {
  box-sizing: border-box;
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  padding: 0 44rpx 0 44rpx;
}

.public-item input {
  font-size: 28rpx;
  height: 40rpx;
  line-height: 40rpx;
  flex: 1;
}

.get-phone{
  font-size:28rpx !important;
  color: #0983F6;
}
.get-phone:active{
  opacity: 0.7;
}

.picker-item {
  box-sizing: border-box;
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #fff;
  padding: 0 44rpx 0 44rpx;
  margin-bottom: 2rpx;
  border-radius: 6rpx;
}

.title-wrapper {
  display: flex;
  align-items: center;
}

.title-text {
  font-size: 28rpx;
  color: #333;
  height: 40rpx;
  line-height: 40rpx;
}
.arrow-icon {
  width: 30rpx;
  height: 30rpx;
}

.submit-btn {
  width: 700rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: linear-gradient(-60deg, #0983F6 0%, #178EFF 100%);
  border-radius: 6rpx;
  color: #fff;
  font-size: 30rpx;
  margin: 70rpx auto 30rpx;
}
.submit-btn-active{
  opacity: 0.7;
}