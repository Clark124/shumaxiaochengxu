/* miniprogram/pages/manageType/manageType.wxss */
page{
  background: #f5f5f5;
}
.tab{
  display: flex;
  align-items: center;
  justify-content: space-around;
  border-bottom: 1rpx solid #eee;
  background: #fff;
}
.tab-item{
  box-sizing: border-box;
  font-size: 26rpx;
  width: 100rpx;
  color: #333;
  height: 70rpx;
  line-height: 70rpx;
  text-align: center;
}
.tab-item.active{
  color: #0983F6;
  border-bottom: 4rpx solid #0983F6;
}


.listbox{
  position: relative;
  height: calc(100vh - 152rpx);
}

.type-item{
  box-sizing: border-box;
  padding: 0 30rpx;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 28rpx;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}
.type-item.clone{
  position: absolute;
  width: 100%;
  box-shadow: orange;
  box-shadow:1rpx 1rpx 1rpx 1rpx #ccc
}


.type-name{
  margin-left: 20rpx;
  color: #666;
}
.type-index{
  color: #aaa;
}
.drag-img{
  height: 60rpx;
  width: 60rpx;
}
.type-item-right{
  display: flex;
  align-items: center;
}
.edit-typename{
  margin-left: 20rpx;
  color: #0983F6;
}

.footer{
  position: fixed;
  bottom: 0;
  left: 0;
  height: 90rpx;
  width: 100%;
  background: #fff;
  display: flex;
}
.footer-btn{
  flex: 1;
  text-align: center;
  line-height: 90rpx;
  font-size: 28rpx;
  color: #fff;
}
.footer-btn.add{
  background: rgb(134, 230, 38);
}
.footer-btn.edit{
  background: orange;
}
.footer-btn.delete{
  background: orangered;
}
.footer-btn.complete{
  background: rgb(7, 201, 7);
}
.btn-active{
  opacity: 0.7;
}

.add-modal{
  position: absolute;
  width: 600rpx;
  height: 320rpx;
  background: #fff;
  border: 1rpx solid #eee;
  border-radius: 20rpx;
  left: 50%;
  top: 300rpx;
  transform: translateX(-50%);
  
}
.modal-title{
  text-align: center;
  font-size:28rpx;
  margin-top: 20rpx;
}
.modal-input-wrapper{
  border-bottom: 1rpx solid #eee;
  padding-bottom: 20rpx;
}
.modal-input-item{
  display: flex;
  align-items: center;
  font-size: 28rpx;
  color: #333;
  box-sizing: border-box;
  padding: 15rpx 40rpx;
}
.add-input{
  font-size: 28rpx;
}
.modal-footer{
  display: flex;
  font-size: 28rpx;
  justify-content: space-around;
  margin-top: 30rpx;
}
.modal-footer .cancel{
  color: #0983F6;
}
.modal-footer .add{
  color: orangered;
}
.modal-footer .btn{
  flex: 1;
  text-align: center;
}
