/* miniprogram/pages/myStock/myStock.wxss */
.tab {
  box-sizing: border-box;
  height: 70rpx;
  padding: 0 20rpx;
  width: 100%;
  white-space: nowrap;
}

.tab-item {
  display: inline-block;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 24rpx;
  color: #999;
  margin-right: 20rpx;
}

.tab-item.active {
  color: red;
}

.stock-list {
  height: calc(100vh - 70rpx);
}

.stock-img {
  width: 240rpx;
  height: 200rpx;
  margin-right: 20rpx;
}

.item-info-wrapper {
  width: 100%;
  padding: 20rpx 10rpx;
  font-size: 24rpx;
}

.item-info {
  margin-bottom: 10rpx;
  display: flex;
  justify-content: space-between;
}
.tip{
  color: red;
}

.no-data {
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}

.not-more {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}


.stock-item {
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #ccc;
  width: 100%;
  overflow: hidden
}

.content {
  width: 100%;
  display: flex;
  height: 200rpx;
  background: #eee;
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  margin-left: -90px;
}

.del {
  background-color: orangered;
  width: 90px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  color: #fff;
  -webkit-transform: translateX(90px);
  transform: translateX(90px);
  -webkit-transition: all 0.4s;
  transition: all 0.4s;
}

.touch-move-active .content,
.touch-move-active .del {
  -webkit-transform: translateX(0);
  transform: translateX(0);
}