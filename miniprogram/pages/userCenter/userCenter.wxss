/* miniprogram/pages/userCenter/userCenter.wxss */
page{
  background:#f5f5f5;
  position: relative;
}
.userinfo-bg{
  width: 100%;
}
.userinfo{
  text-align: center;
  position: absolute;
  left: 0;
  top: 70rpx;
  width: 100%;
}
.userinfo-block-avatar{
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  margin: 0 auto;
  overflow: hidden;
}
.userinfo-avatar{
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background-size: cover;
  background-color: white;
}
.userinfo-avatar[size] {
  width: 140rpx;
}
.username{
  text-align: center;
  margin-top: 20rpx;
  font-size: 29rpx;
  color: #222;
}

.nav-list{
  width: 700rpx;
  margin: 120rpx auto 0;
  background: #fff;
  box-sizing: border-box;
  padding: 0 30rpx;
}

.nav-block{
  width: 700rpx;
  margin: 30rpx auto 0;
  background: #fff;
  box-sizing: border-box;
  padding: 0 30rpx;
}


.nav-my-publish,.contact-us{
  box-sizing: border-box;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #eee;
  font-size: 28rpx;
  color: #666;
}
.nav-my-publish:last-child{
  border-bottom: none;
}
.contact-us:last-child{
  border-bottom: none;
}

.nav-text{
  display: flex;
  align-items: center;
}

.nav-icon{
  width: 38rpx;
  height: 38rpx;
  margin-right: 30rpx;
}
.arrow-icon{
  width: 26rpx;
  height: 26rpx;
}
