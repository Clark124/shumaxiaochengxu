.swiper-img{
  width: 100%;
  height: 500rpx;
}
.swiper{
  height: 500rpx;
}
.title{
  margin-top: 30rpx;
  display: flex;
  justify-content: space-between;
  padding: 10rpx 20rpx;
}
.stock-item{
  width: 100%;
  background: #eee;
  border-bottom: 1rpx solid #aaa;
}
.item-info-wrapper {
  box-sizing: border-box;
  height: 200rpx;
  font-size:24rpx;
  padding: 20rpx 20rpx;
}
.item-info-view{
  height: 40rpx;
  margin-bottom: 10rpx;
}
.item-info{
  display: inline-block;
  height: 40rpx;
  line-height: 40rpx;
  margin-right: 40rpx;
  margin-bottom: 10rpx;
}
.stock-img {
  width: 240rpx;
  height: 200rpx;
  margin-right: 20rpx;
}