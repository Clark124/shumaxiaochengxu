/* miniprogram/pages/manageUserDetail/manageUserDetail.wxss */
page{
  padding: 30rpx;
  box-sizing: border-box;
}
.avatar{
  width: 200rpx;
  height: 200rpx;
}
.username{
  text-align: center;
}
.nickname{
  margin-top: 20rpx;

}
.vip-list{
  margin-top: 20px;
  font-size:28rpx;
}
.vip-item{
  margin-right: 30rpx;
}

.region-list,.vip-date{
  margin-top: 30px;
  display: flex;
  align-items: center;
  font-size:28rpx;
}
.region-item{
  margin-right: 50rpx;
}
.vip-date-picker{
  flex: 1;
 
}
.vip-date-value{
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.arrow-icon{
  width: 26rpx;
  height: 26rpx;
}

.submit-btn {
  width: 700rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: linear-gradient(-60deg, #0983F6 0%, #178EFF 100%);
  border-radius: 6rpx;
  color: #fff;
  font-size: 30rpx;
  margin: 100rpx auto 30rpx;
}
.submit-btn-active{
  opacity: 0.7;
}

