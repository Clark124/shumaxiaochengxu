<!--miniprogram/pages/stockDetail/stockDetail.wxml-->
<swiper indicator-dots="{{true}}" autoplay="{{false}}" interval="{{2000}}" duration="{{500}}" class="swiper">
  <block wx:for="{{imgList}}" wx:key="index" wx:if="{{item.url}}">
    <swiper-item>
      <view class="swiper-item" bindtap="previewSwiper" data-url="{{item.url}}">
        <image src="{{item.url}}" class="swiper-img"></image>
      </view>
    </swiper-item>
  </block>
</swiper>
<view>商品名称：{{productName}}</view>
<view>类型：{{typeName}}</view>
<view>价格：{{productPirce}}</view>
<view>数量：{{productCount}}</view>
<view>描述：{{productDiscribe}}</view>
<view>区域：{{regionName}}</view>
<view>商家：{{businessName}}</view>
<view>电话：{{phone}}</view>
<view>发布时间：{{createDate}}</view>
<view class="detail-wrapper">
  <view>商品细节</view>
  <image wx:for="{{productDetailImg}}" wx:if="{{item.url}}" wx:key="index" data-url="{{item.url}}" mode="widthFix"
    bindtap="previewDetail" src="{{item.url}}" class="img-detail"></image>
</view>

<view class="btn-wrapper">
  <button type="primary" bindtap="toEdit" wx:if="{{openid===_openid}}">修改</button>
  <button type="primary" bindtap="toAddTop" wx:if="{{(openid===_openid)&&!isTop}}">5元置顶</button>
  <button type="default"  wx:if="{{(openid===_openid)&&isTop}}">已置顶</button>
</view>