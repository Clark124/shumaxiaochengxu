
.search-wrapper{
  position: relative;
  box-sizing: border-box;
  height: 100rpx;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 1rpx solid #eee;
}
.search-input {
  box-sizing: border-box;
  width: 700rpx;
  height: 64rpx;
  border-radius: 32rpx;
  font-size: 24rpx;
  background:#eee;
  padding-left: 34rpx;
}
.search-icon{
  position: absolute;
  right: 44rpx;
  top: 28rpx;
  width: 40rpx;
  height: 40rpx;
  z-index: 2;
}

.container{
  display: flex;
}

.tab-list {
  box-sizing: border-box;
  height: calc(100vh - 100rpx);
  width: 170rpx;
  background: #F2F2F2;
}

.stock-list {
  box-sizing: border-box;
  height: calc(100vh - 100rpx);
  flex: 1;
  background: rgb(250, 250, 250);
  padding: 16rpx;
}

.tab-item {
  height: 74rpx;
  line-height: 74rpx;
  text-align: center;
  font-size: 26rpx;
  color: #333;
}

.tab-item.active {
  background: #FFF;
  color: #0983F6;
}

.stock-item{
  box-sizing: border-box;
  width: 100%;
  background: #fff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  padding: 25rpx 20rpx 25rpx 20rpx;
}
.block-head{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #eee;
}
.block-head-text{
  display: inline-block;
  font-size: 24rpx;
  background: #0983F6;
  color: #fff;
  padding: 0 8rpx;
  border-radius: 5rpx;
  margin-right: 5rpx;
}
.product-name{
  font-size: 28rpx;
  color: #222;
}
.price-unit{
  font-size: 28rpx;
  color: #F93204;
}
.price{
  font-size: 32rpx;
  color: #F93204;
  font-weight: bold;
}

.config{
  font-size: 24rpx;
  color: #666666;
  margin: 20rpx 0;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.info-row{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.condition{
  background: rgba(61, 149, 246, 0.1);
  color: #0983F6;
  font-size: 24rpx;
  padding: 0 6rpx;
}
.tip{
  background: linear-gradient(0deg, #FE4144 0%, #FE4144 100%);
  box-shadow: 0px 2px 4px 0px rgba(254, 65, 68, 0.32);
  color: #fff;
  font-size: 24rpx;
  padding: 0 6rpx;
  margin-left: 10rpx;
}



.count{
  font-size: 24rpx;
  color: #666666;
}


.no-data {
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}

.not-more {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}
