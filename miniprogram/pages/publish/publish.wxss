/* miniprogram/pages/publish/publish.wxss */
page {
  background: #f5f5f5;
}
.container{
  padding: 20rpx 25rpx;
  box-sizing: border-box;
}
.login-wrapper{
  text-align: center;
}
.login{
  position: absolute;
  top: 70rpx;
  left: 50%;
  transform: translateX(-50%);
}
.login-text{
  font-size: 29rpx;
  color: #222;
  margin-top: 10rpx;
}
.userinfo-bg{
  width: 100%;
}
.default-avatar{
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  background: #fff;
}

.picker-item {
  box-sizing: border-box;
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #fff;
  padding: 0 24rpx 0 44rpx;
  margin-bottom: 2rpx;
  border-radius: 6rpx;
}

.title-wrapper {
  display: flex;
  align-items: center;
}

.title-text {
  font-size: 28rpx;
  color: #999;
}

.arrow-icon {
  width: 30rpx;
  height: 30rpx;
}

.public-item {
  display: flex;
  align-items: flex-start;
}

.public-item.img {
  flex-wrap: wrap;
}
.get-phone{
  font-size:28rpx !important;
  color: #0983F6;
}
.get-phone:active{
  opacity: 0.7;
}

.public-title {
  font-size: 28rpx;
  color: #333;
}

.public-wrapper {
  background: #fff;
}

.public-item {
  box-sizing: border-box;
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  padding: 0 24rpx 0 44rpx;

}

.public-item input {
  font-size: 28rpx;
  flex: 1;
}

.public-item.img {
  flex-direction: column;
  height: auto;
  align-items: flex-start;
}

.image-list {
  display: flex;
  flex-wrap: wrap;
  margin-top: 10rpx;
}

.image-wrapper {
  position: relative;
  width: 183rpx;
  height: 173rpx;

  margin-right: 28rpx;
  text-align: center;
  margin-bottom: 20rpx;
}

.default-img {
  width: 183rpx;
  height: 173rpx;
}

.product-img {
  width: 183rpx;
  height: 173rpx;
}

.delete-img {
  position: absolute;
  width: 30rpx;
  height: 30rpx;
  border-radius: 50%;
  right: -15rpx;
  top: -15rpx;
}

.submit-btn {
  width: 700rpx;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: linear-gradient(-60deg, #0983F6 0%, #178EFF 100%);
  border-radius: 6rpx;
  color: #fff;
  font-size: 30rpx;
  margin: 40rpx auto 30rpx;
}
.submit-btn-active{
  opacity: 0.7;
}

.mark {
  font-size: 24rpx;
  padding-left: 44rpx;
  color: #FF1616;
  padding-bottom: 20rpx;
}

.contact-wrapper{
  color: #333;
  font-size: 28rpx;
  padding: 30rpx;
  text-align: center;
}

.contact-us{
  color: #0983F6;
  margin-top: 30rpx;
  font-size: 32rpx;
}