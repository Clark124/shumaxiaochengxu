.search-wrapper{
  position: relative;
  box-sizing: border-box;
  height: 60rpx;
  padding-top: 10rpx;
}
.search-input {
  width: 600rpx;
  margin: 0 auto;
  border: 1px solid #eee;
  height: 50rpx;
  border-radius: 25rpx;
  padding-left: 20rpx;
  font-size: 24rpx;
  background:#eee;
}
.search-icon{
  position: absolute;
  right: 76rpx;
  top: 17rpx;
  width: 40rpx;
  height: 40rpx;
  z-index: 2;
}

.tab {
  box-sizing: border-box;
  height: 70rpx;
  padding: 0 20rpx;
  width: 100%;
  white-space: nowrap;
}

.tab-item {
  display: inline-block;
  height: 70rpx;
  line-height: 70rpx;
  font-size: 24rpx;
  color: #999;
  margin-right: 20rpx;
}

.tab-item.active {
  color: red;
}

.stock-list {
  height: calc(100vh - 130rpx);
}

.stock-img {
  width: 240rpx;
  height: 200rpx;
  margin-right: 20rpx;
}

.item-info-wrapper {
  padding: 20rpx 10rpx;
  font-size: 24rpx;
}

.item-info {
  margin-bottom: 10rpx;
}
.item-info.active{
  color: red;
}
.no-data {
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}

.not-more {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}


.stock-item {
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #ccc;
  width: 100%;
  overflow: hidden
}

.content {
  width: 100%;
  display: flex;
  height: 200rpx;
  background: #eee;
}