/* miniprogram/pages/search/search.wxss */
.search-wrapper{
  position: relative;
  box-sizing: border-box;
  height: 60rpx;
  padding-top: 10rpx;
}
.search-input {
  width: 600rpx;
  margin: 0 auto;
  border: 1px solid #eee;
  height: 50rpx;
  border-radius: 25rpx;
  padding-left: 20rpx;
  font-size: 24rpx;
  background:#eee;
}
.search-icon{
  position: absolute;
  right: 76rpx;
  top: 17rpx;
  width: 40rpx;
  height: 40rpx;
  z-index: 2;
}

.stock-list {
  height: 100vh;
}

.stock-img {
  width: 240rpx;
  height: 200rpx;
  margin-right: 20rpx;
}

.item-info-wrapper {
  padding: 20rpx 10rpx;
  font-size: 24rpx;
}

.item-info {
  margin-bottom: 10rpx;
}

.no-data {
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
}

.not-more {
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
}


.stock-item {
  display: flex;
  justify-content: space-between;
  border-bottom: 1px solid #ccc;
  width: 100%;
  overflow: hidden
}

.content {
  width: 100%;
  display: flex;
  height: 200rpx;
  background: #eee;
}